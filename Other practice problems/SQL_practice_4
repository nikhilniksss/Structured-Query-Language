-- Exercise

UPDATE cats SET name = 'Jack' WHERE name = 'Jackson';

UPDATE cats SET breed = 'British Shorthair' WHERE name = 'Ringo';

UPDATE cats SET age = 12 WHERE breed = 'Maine Coon';

SELECT * FROM cats;

-- DELETE in SQL

